<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <LinearLayout
            android:id="@+id/user_name_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:clickable="true"
            android:background="?android:selectableItemBackground"
            >

            <EditText
                android:id="@+id/user_name_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="Coding用户名"
                android:gravity="bottom|start"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/settings_title_color"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:background="@null"
                />

            <TextView
                android:id="@+id/user_name_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="输入coding用户名"
                android:gravity="top|start"
                android:maxLines="2"
                android:textSize="12sp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_color"
            />
        <LinearLayout
            android:id="@+id/github_user_name_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:clickable="true"
            android:background="?android:selectableItemBackground"
            >

            <EditText
                android:id="@+id/github_user_name_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="Github用户名"
                android:gravity="bottom|start"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/settings_title_color"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:background="@null"
                />

            <TextView
                android:id="@+id/github_user_name_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="输入github用户名"
                android:gravity="top|start"
                android:maxLines="2"
                android:textSize="12sp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_color"
            />
    </LinearLayout>
</LinearLayout>